<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_revolutionary"
    tools:context=".SplashActivity">

    <!-- Dynamic Mesh Gradient Background -->
    <View
        android:id="@+id/backgroundMesh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mesh_gradient_background"
        android:alpha="0.95" />

    <!-- Animated Wave Overlay -->
    <View
        android:id="@+id/waveOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wave_pattern_overlay"
        android:alpha="0.2" />

    <!-- Geometric Floating Elements -->
    <View
        android:id="@+id/hexagon1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/hexagon_emerald"
        android:alpha="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/triangle1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/triangle_coral"
        android:alpha="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/diamond1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/diamond_teal"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/circle1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/circle_gradient_gold"
        android:alpha="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/pentagon1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/pentagon_blue"
        android:alpha="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Premium Particle System -->
    <View
        android:id="@+id/sparkle1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/sparkle_gold"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/sparkle2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="290dp"
        android:background="@drawable/sparkle_emerald"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/sparkle3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="440dp"
        android:background="@drawable/sparkle_coral"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/sparkle4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="390dp"
        android:background="@drawable/sparkle_teal"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/sparkle5"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/sparkle_blue"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/sparkle6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="490dp"
        android:background="@drawable/sparkle_gold"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Revolutionary Logo Design -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logoContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="100dp"
        app:cardElevation="30dp"
        app:layout_constraintBottom_toTopOf="@+id/appName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/logo_container_revolutionary">

            <!-- Multi-layered Logo Design -->
            <View
                android:id="@+id/logoRing1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/logo_ring_outer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/logoRing2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/logo_ring_middle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/logoCore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/logo_core_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Central Icon -->
            <TextView
                android:id="@+id/logoIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/logo_icon_bg"
                android:gravity="center"
                android:text="â‚¿"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Orbital Elements -->
            <View
                android:id="@+id/orbital1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/orbital_dot_gold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/orbital2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/orbital_dot_emerald"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/orbital3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/orbital_dot_coral"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/orbital4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/orbital_dot_teal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Premium Typography -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Smart App"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        android:textStyle="bold"
        android:shadowColor="#44000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"
        app:layout_constraintBottom_toTopOf="@+id/tagline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoContainer" />

    <!-- Enhanced Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:text="ðŸš€ Financial Freedom Starts Here"
        android:textColor="#F5F5F5"
        android:textSize="20sp"
        android:textStyle="italic"
        android:shadowColor="#44000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintBottom_toTopOf="@+id/progressContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <!-- Revolutionary Loading Section -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline">

        <!-- Premium Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="280dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_revolutionary" />

        <!-- Dynamic Loading Text -->
        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="ðŸ’Ž Initializing your wealth journey..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:alpha="0.95"
            android:shadowColor="#33000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />
    </LinearLayout>

    <!-- Premium Version Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-light"
        android:text="Version 1.0 â€¢ Crafted with Excellence âœ¨"
        android:textColor="#EEFFFFFF"
        android:textSize="16sp"
        android:shadowColor="#22000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>